<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lapo.pengaduan.MainActivity_upload_gambar_lapor"
    tools:showIn="@layout/activity_main_upload_gambar_lapor">

    <Button
        android:id="@+id/buttonChoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@android:drawable/ic_menu_gallery"
        android:text="Pilih Foto/Gambar Galery" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="259dp"
        android:layout_weight="1"
        android:background="@color/list_row_hover_end_color" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="284dp"
        android:layout_height="135dp"
        android:hint="Isikan sambat dan keterangan Foto/Gambar"
        android:textStyle="bold" />

</LinearLayout>
